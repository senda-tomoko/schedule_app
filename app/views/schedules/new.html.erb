<h3>予定の新規追加</h3>

<%= form_with model: @schedule, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day, '終日の場合はチェックを入れます' %></th>
      <td><%= f.check_box :all_day %></td>
    </tr>

    <tr>
      <th><%= f.label :schedule_memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :schedule_memo %></td>
    </tr>

    <% if @schedule.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

    <ul>
    <% @schedule.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  </table>

  <div>
    <ul>
      <li><%= f.submit "保存する" %></li>
      <li><%= link_to "キャンセル", schedules_path %></li>
    </ul>
  </div>
<% end %>
